<% layout("/layouts/boilerplate") %>
<body>
  <div class="container mt-custom p-2 mb-5">
    <h1 class="text-center mb-3">Restaurants</h1>
    <div class="col-auto">
    <% for(let resta of allResta) { %>
    <a href="/resta/<%= resta._id %>" class="text-decoration-none text-dark">
      <div class="card mb-3 p-2" style="max-width: 80vw">
        <div class="row g-0">
          <div class="col-md-4 d-flex align-items-stretch">
            <img
              src="<%= resta.image.url %>"
              class="img-fluid rounded-start"
              alt="<%= resta.title %>"
            />
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h2 class="card-title"><%= resta.title %></h2>
              <p class="card-text"><%= resta.description %></p>
              <p class="card-text">
                <small class="text-muted">
                  <i class="fa-solid fa-location-dot"></i>&nbsp;&nbsp;<%=
                  resta.location %>
                </small>
              </p>
              <p class="card-text">
                <small class="text-muted">
                  <i class="fa-solid fa-phone"></i>&nbsp;&nbsp;(+91)&nbsp;<%=
                  resta.contact %>
                </small>
              </p>
            </div>
          </div>
        </div>
      </div>
    </a>
    <% } %>
  </div>
</body>

<style>
  .container {
    margin-top: 2rem;
  }

  .card {
    border-radius: 10px;
    border: 1px solid #ddd;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    transition: transform 0.2s;
  }

  .card:hover {
    transform: scale(1.02);
  }

  .card img {
    width: 100%;
    height: 255px;
    object-fit: cover;
    border-radius: 10px;
  }

  .card-body {
    padding: 18px;
  }

  .text-decoration-none {
    text-decoration: none;
  }

  .text-dark {
    color: inherit;
  }
</style>
