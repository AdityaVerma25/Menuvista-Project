<%layout("/layouts/boilerplate")%>
<body>
  <div
    class="container-fluid mt-5 p-3 hero-form"
    style="padding-left: 20px; padding-right: 20px"
  >
    <div class="signup-container">
      <div class="right">
        <div>
          <h2>
            <strong style="color: rgb(65, 65, 65)"> Menuvista</strong>
          </h2>
          <p>
            Menuvista revolutionizes dining with instant, interactive menus
            right on your smartphone. Scan our QR code and access a restaurant’s
            full menu in seconds—no paper, no wait. Enjoy a sleek, modern dining
            experience that puts every dish at your fingertips, making every
            meal a delight with Menuvista.
          </p>
        </div>
      </div>

      <!-- Right Side -->
      <div class="left user-form">
        <div class="form-container">
          <h2 class="text-center">Create Your Account</h2>
          <form
            id="restaurantForm"
            method="post"
            action="/user/signup"
            class="needs-validation"
            novalidate
          >
            <div class="mb-3">
              <label for="username" class="form-label">Username</label>
              <input
                id="username"
                type="text"
                class="form-control"
                name="username"
                required
              />
              <div class="invalid-feedback">
                Please provide a valid username.
              </div>
            </div>

            <div class="mb-3">
              <label for="email" class="form-label">Email</label>
              <input
                id="email"
                type="email"
                class="form-control"
                name="email"
                required
              />
              <div class="invalid-feedback">
                Please provide a valid email address.
              </div>
            </div>

            <div class="mb-3">
              <label for="password" class="form-label">Password</label>
              <input
                id="password"
                type="password"
                class="form-control"
                name="password"
                minlength="8"
                maxlength="16"
                required
              />
              <div class="invalid-feedback" id="password-feedback">
                <!-- Custom messages will be inserted here by JavaScript -->
              </div>
            </div>

            <button class="btn btn-success" type="submit">Sign Up</button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <style>
    /* General Styles */
    .container-fluid {
      height: 90vh;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    .signup-container {
      display: flex;
      width: 100%;
      max-width: 1200px;
      height: 85%;
      border-radius: 10px;
      overflow: hidden;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .left,
    .right {
      flex: 1;
      padding: 2rem;
      box-sizing: border-box;
    }

    .left {
      background-color: #f8f9fa;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      border-right: 1px solid #ddd;
    }

    .right {
      background-color: #ffffff;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .form-container {
      width: 100%;
      max-width: 500px;
    }

    .form-container h2 {
      margin-bottom: 1.5rem;
    }

    .form-container a {
      display: block;
      margin-top: 1rem;
      text-align: center;
      color: #007bff;
      text-decoration: none;
    }

    .form-container a:hover {
      text-decoration: underline;
    }

    .form-container input {
      margin-bottom: 1rem;
    }

    .text-right a {
      font-size: 1rem;
      text-decoration: none;
      color: #007bff;
    }

    .text-right a:hover {
      text-decoration: underline;
    }

    .invalid-feedback {
      color: red;
      font-size: 0.875rem;
    }
  </style>
</body>
