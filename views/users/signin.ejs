<%layout("/layouts/boilerplate")%>
<body>
  <div class="mt-custom">
    <div class="signin-container">
      <div class="form-container">
        <h2 class="text-center">SignIn on Menuvista</h2>
        <form
          id="restaurantForm"
          action="/user/signin"
          method="post"
          class="needs-validation p-5"
          novalidate
        >
          <div class="mb-3">
            <input
              id="username"
              type="text"
              class="form-control"
              name="username"
              placeholder="Enter your username"
              required
            />
          </div>
          <div class="mb-3">
            <input
              id="password"
              type="password"
              class="form-control"
              name="password"
              placeholder="Enter your password"
              required
            />
          </div>
          <button class="btn btn-success mb-4">Login</button>
          <div class="d-flex justify-content-between">
            <a href="/user/updatePassword">Update Password?</a>
            <a href="/user/signup">Register as new user</a>
          </div>
        </form>
      </div>
    </div>
  </div>
</body>
