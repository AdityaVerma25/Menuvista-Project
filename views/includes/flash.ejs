<% if(success && success.length){%>
<div
  class="alert alert-success mt-custom px-3 col-6 offset-3 d-flex align-items-center justify-content-between"
  role="alert"
  style="height: calc(2.25rem - 10px); border-radius: 20px"
>
  <span><%= success %></span>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>

<%}%>


<% if(error && error.length){%>
<div
  class="alert alert-danger mt-custom px-3 col-6 offset-3 d-flex align-items-center justify-content-between"
  role="alert"
  style="height: calc(2.25rem - 10px); border-radius: 20px"
>
  <span><%= error %></span>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<%}%>

<style>
  .alert{
    margin-bottom: -5rem;
  }
</style>
